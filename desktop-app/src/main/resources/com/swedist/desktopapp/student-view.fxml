<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="375.0" prefWidth="604.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.swedist.desktopapp.controller.StudentController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <Label text="Students" textFill="#000000e8">
        <font>
            <Font size="25.0"/>
        </font>
    </Label>
    <AnchorPane prefHeight="215.0" prefWidth="564.0">
        <Label layoutX="32.0" layoutY="14.0" text="Student ID"/>
        <TextField fx:id="studentIdField" layoutX="159.0" layoutY="10.0" prefHeight="26.0" prefWidth="194.0" promptText="id"
                   scaleShape="false"/>
        <Label graphicTextGap="2.0" layoutX="26.0" layoutY="50.0" text="Student Name"/>
        <TextField fx:id="studentNameField" layoutX="159.0" layoutY="46.0" prefHeight="8.0" prefWidth="193.0"
                   promptText="name"/>
        <Label layoutX="21.0" layoutY="91.0" text="Student Department"/>
        <TextField fx:id="studentDepartmentField" layoutX="159.0" layoutY="86.0" prefHeight="26.0" prefWidth="194.0"
                   promptText="Department"/>
        <Button layoutX="68.0" layoutY="149.0" onAction="#onSaveButtonClickStudent" text="Save"/>
        <Button layoutX="279.0" layoutY="149.0" onAction="#onDeleteButtonClickStudent" text="Delete"/>
        <Button layoutX="437.0" layoutY="10.0" mnemonicParsing="false" onAction="#onFetchButtonClickStudent"
                text="Fetch"/>
        <Button layoutX="159.0" layoutY="149.0" mnemonicParsing="false" onAction="#onUpdateButtonClickStudent"
                text="Update"/>
        <Button layoutX="406.0" layoutY="149.0" mnemonicParsing="false" onAction="#onCloseButtonClickStudent"
                text="Exit"/>
        <Button layoutX="434.0" layoutY="74.0" mnemonicParsing="false"
                onAction="#onButtonClickComputerView" text="Computer"/>
    </AnchorPane>
</VBox>